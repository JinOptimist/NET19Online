@using WebStoryFroEveryting.Models.GamingDevice
@model GamingDeviceIndexViewModel

@{
    Layout = "~/Views/Shared/_LayoutGamingDevice.cshtml";
}

@section Styles{
    <link href="~/css/GamingDevice/index.css" rel="stylesheet" />
}

<div class="stock-addresses-filter-bar">
            @foreach (var address in Model.StockAdresses)
            {
                <span class="address @(Model.StockAdresses.Contains(address) ? "selected" : "")" data-address="@address">
                    <a href="/GamingDevice/Index?stockAddress=@address" class="stock-address @(address == Model.CurrentStockAddress ? "active": "")">@address</a>
                </span>
            }
            <div class="filter-buttons">
                <a href="/GamingDevice/Index" class="reset-button">Добавить адрес</a>
                <a href="/GamingDevice/Index" class="reset-button">Сбросить фильтр</a>
            </div>
</div>

<div class="devices">
    @foreach (var device in Model.Devices)
    {
        <div class="device">
            <div class="brand">@device.Brand</div>
            <div class="brand">@device.Name</div>
            <div class="image-container">
                <img src="@device.Src" />
            </div>
            <div class="brand">@device.Price</div>
            <div class="buttons">
                <div class="button">+</div>
                <a href="/GamingDevice/RemoveGamingDevice?deviceId=@device.Id" class="button">-</a>
            </div>
            <div class="device-add-review-button">
                <a href="/GamingDevice/ReviewForGamingDevice?deviceId=@device.Id" class="button">Leave review</a>
            </div>
        </div>
    }
</div>