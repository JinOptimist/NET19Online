<html>
<head>
    <link href="~/css/reset.css" rel="stylesheet" />
    <link href="~/css/MagicItem/magicItem.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @RenderSection("Styles", false)
</head>
<body>
    <nav class="navbar bg-dark border-bottom border-body magic-items-header" data-bs-theme="dark">
        <button class="navbar-toggler magic-items-header-nav" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title dancing-script-font" id="offcanvasDarkNavbarLabel">Magic Items</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                        <a class="nav-link active dancing-script-font" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active dancing-script-font" aria-current="page" href="/MagicItem/Create">Create Magic Item</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dancing-script-font" href="#">Contacts</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle dancing-script-font" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Items
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item dropdown-menu-dark dancing-script-font" href="#">Books</a></li>
                            <li><a class="dropdown-item dropdown-menu-dark dancing-script-font" href="#">Rings</a></li>
                            <li><a class="dropdown-item dropdown-menu-dark dancing-script-font" href="#">Elixirs</a></li>
                            <li><a class="dropdown-item dropdown-menu-dark dancing-script-font" href="#">Equipment</a></li>
                            <li><a class="dropdown-item dropdown-menu-dark dancing-script-font" href="#">Scrolls</a></li>

                        </ul>
                    </li>
                </ul>
                <form class="d-flex mt-3 dancing-script-font" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-warning btn-success" type="submit">Search</button>
                </form>
            </div>
        </div>
        <h1 class="magic-items-header-name dancing-script-font">Magic Items Store</h1>
        <div class=" d-grid gap-2 d-md-flex justify-content-md-end dancing-script-font auth-container">
            
            <button type="button" class="btn btn-dark">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-basket" viewBox="0 0 16 16">
                    <path d="M5.757 1.071a.5.5 0 0 1 .172.686L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1v4.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 13.5V9a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h1.217L5.07 1.243a.5.5 0 0 1 .686-.172zM2 9v4.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V9zM1 7v1h14V7zm3 3a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 4 10m2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 6 10m2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 8 10m2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5m2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5" />
                </svg>
            </button>
            <button type="button" class="btn btn-dark">Login</button>
            <button type="button" class="btn btn-warning">Sign-up</button>
        </div>
    </nav>
    <div class="menu-and-content">
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
