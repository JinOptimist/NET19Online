@using WebStoryFroEveryting.Models.Singers
@model List<WebStoryFroEveryting.Models.Singers.SingerViewModel>

@{
    Layout = "~/Views/Shared/_LayoutSinger.cshtml";
}

@section Scripts {
    <script src="~/js/Singer/remove.js"></script>
}
@section Styles {
    <link href="~/css/Singer/Singer.css" rel="stylesheet" />
    <link href="~/css/Singer/SingerSpecial.css"/>
}

@if (!Model.Any())
{
    <div class="alert alert-warning">
        @Model.FirstOrDefault()?.ErrorMessage
    </div>
}
else
{
    <div class="singers">
        @foreach (var singer in Model)
        {
            <div class="singer">
                <div class="name">@singer.Pseudonym</div>
                <div class="image-container">
                    <img src="@singer.Src" />
                </div>
                <div class="style">Стиль Музыки: @singer.Style</div>
                <a href="@Url.Action("Create", "Singer")" class="add-item">Добавить</a>
                <a href="@Url.Action("Update", new { id = singer.Id })" class="update-item">Изменить</a>
                <button class="remove-item btn btn-danger" data-id="@singer.Id">Удалить</button>
            </div>
        }
    </div>
}
