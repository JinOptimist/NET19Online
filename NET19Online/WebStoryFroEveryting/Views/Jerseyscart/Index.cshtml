@using WebStoryFroEveryting.Models.Jerseys
@model JerseyCartViewModel
@{
    Layout = "~/Views/Shared/_LayoutJersey.cshtml";
}
@section Scripts {
    
}
@section Styles {
    <link href="~/css/jerseys/jerseys-cart.css" rel="stylesheet" />
}
<div id="content-left">
</div>
<div id="content-right">

    <h2>Корзина</h2>

    <table id="cart">
        <thead>
            <tr>

                <th>Название</th>
                <th>Изображение</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Итого</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><img src="@item.Image" /></td>
                    <td>@item.Price BYN</td>
                    <td>
                        <form asp-action="RemoveOneToCart" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit">-</button>
                        </form>
                        <div class="cartQuantity">@item.Quantity</div>

                        <form asp-action="AddOneToCart" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit">+</button>
                        </form>
                    </td>
                    <td>@item.Total BYN</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit">Удалить</button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <h3>Общая сумма: @Model.GrandTotal BYN</h3>
</div>


