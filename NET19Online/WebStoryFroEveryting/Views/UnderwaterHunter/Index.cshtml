@using WebStoryFroEveryting.Localizations
@using WebStoryFroEveryting.Models.UnderwaterHuntersWorld
@model HunterIndexViewModel
@{
	Layout = "~/Views/Shared/_LayoutHunter.cshtml";
}
@section Scripts {
	<script src="~/js/UnderwaterHunter/index.js"></script>
}

<div class="quote">
	<div>
		Quote of day:
	</div>
	<div>
		@Model.Quote
	</div>
</div>

<div class="userName">@Model.Author</div>

<div class="filter-By-Tags">
	<div>Filters:</div>
	<div class="tags">
		@foreach (var tag in Model.Tags)
		{
			<a href="/UnderwaterHunter/Index?tag=@tag" class="showTag">@tag, </a>
		}
	</div>
</div>

<div class="allHunters creater">
	@foreach (var item in Model.Hunters)
	{
		<div class="hunters" data-id="@item.Id">
			<div class="likes">
				<a href="#" class="image-like">
					<img src="~/images/Like.png" />
				</a>
				<div class="likesCount">@item.LikesCount</div>
				<div class="dislikes">
					<a href="#" class="image-dislike">
						<img src="~/images/DisLike.png" />
					</a>
					<div class="dislikesCount">@item.DislikesCount</div>
				</div>
			</div>
			<div class="image">
				<img src="@item.Src" />
			</div>
			<div class="name">@item.NameHunter</div>
			<div class="nationality">Nationality: @item.Nationality</div>
			<div class="maxDepth">Maximum hunting depth: @item.MaxHuntingDepth meters</div>
			<a class="leave-comment " href="/UnderwaterHunter/CommentHunter?id=@item.Id">@HuntersStartPage.Key_AddCommentAndTag</a>
			<a href="#" class="removeIcon">@HuntersStartPage.Key_removeHunter</a>
			<a href="#" class="hide-image">@HuntersStartPage.Key_hideImage</a>
		</div>
	}
	<div class="createrNewhunter template hunters" data-id="">
		<div class="likes">
			<a href="#" class="image-like">
				<img src="~/images/Like.png" />
			</a>
			<div class="likesCount"></div>
			<div class="dislikes">
				<a href="#" class="image-dislike">
					<img src="~/images/DisLike.png" />
				</a>
				<div class="dislikesCount"></div>
			</div>
		</div>
		<div class="image">
			<img src="" />
		</div>
		<div class="name"></div>
		<div class="nationality"></div>
		<div class="maxDepth"></div>
		<a class="leave-comment" href="#">@HuntersStartPage.Key_AddCommentAndTag</a>
		<a href="#" class="removeIcon">@HuntersStartPage.Key_removeHunter</a>
		<a href="#" class="hide-image">@HuntersStartPage.Key_hideImage</a>
	</div>
</div>

<div class="blockForCreating-startPage allHunters">
	<div class="hunters" data-id="">
		<div class="image-container">
			<img src="" />
		</div>
		<div class="name">
			<input class="new-name" placeholder="name" />
		</div>
		<div class="nationality">
			<input class="new-nationality" placeholder="nationality" />
		</div>
		<div class="maxDepth">
			<input class="new-maxDepth" placeholder="max depth" />
		</div>
		<div class="image">
			<input class="new-image" placeholder="src" />
		</div>
		<a class="creatHunter" href="#">@HuntersStartPage.Key_createNewHunter </a>
	</div>
</div>

<div class="likePhotoUser">
	<img src="~/images/hunterImages/photo.jpg" width="100" height="100" />
		<form action="/UnderwaterHunter/UpdateLikeUserPhoto" method="post" enctype='multipart/form-data'>
			<div><input name="photo" type="file" /></div>
			<div><button type="submit">Обновить фото</button></div>
		</form>		
</div>