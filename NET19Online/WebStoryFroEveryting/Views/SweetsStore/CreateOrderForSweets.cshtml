@using WebStoryFroEveryting.Models.SweetsModel
@model List<SweetsViewModel>
@{
	Layout = "~/Views/Shared/_LayoutSweets.cshtml";
}

@section Styles {
	<link href="~/css/SweetsStore/SweetsStoreSpeical.css" rel="stylesheet" />
}

<div class="idols">
	@foreach (var models in Model)
	{
		<div class="models">
			<div class="name">@models.Name</div>
			<div class="image-container">
				<img src="@models.Src" />
			</div>
			<div class="buttons">
				<a href="/SweetsStore/CommentForSweets?sweetsId=@models.Id" class="button">+</a>
				<a href="/SweetsStore/Remove?id=@models.Id" class="button">-</a>
			</div>
		</div>
	}
</div>